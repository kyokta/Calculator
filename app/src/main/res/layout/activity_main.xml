<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/input_angka"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:textSize="70sp"
        android:gravity="right"
        android:hint="0"
        android:textColorHint="@color/white"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="3dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintTop_toBottomOf="@+id/input_angka">

        <Button
            android:id="@+id/btn_ac"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#D8D9DA"
            android:textColor="@color/black"
            android:text="AC"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_pm"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#D8D9DA"
            android:textColor="@color/black"
            android:text="+/-"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_persen"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#D8D9DA"
            android:textColor="@color/black"
            android:text="%"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_bagi"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#D4AF37"
            android:text="/"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#61677A"
            android:text="7"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#61677A"
            android:text="8"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#61677A"
            android:text="9"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_kali"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#D4AF37"
            android:text="X"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#61677A"
            android:text="4"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#61677A"
            android:text="5"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#61677A"
            android:text="6"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_kurang"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#D4AF37"
            android:text="-"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#61677A"
            android:text="1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#61677A"
            android:text="2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#61677A"
            android:text="3"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_tambah"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#D4AF37"
            android:text="+"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#61677A"
            android:text="0"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_koma"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#61677A"
            android:text=","
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_hasil"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:backgroundTint="#D4AF37"
            android:text="="
            android:textSize="30sp"
            android:textStyle="bold" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>